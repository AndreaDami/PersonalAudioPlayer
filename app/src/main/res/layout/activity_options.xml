<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#404040"
    tools:context="com.maialovic.myaudioplayer.listSongs"
    tools:ignore="Orientation"
    android:gravity="center_horizontal|center|center_vertical"
    android:weightSum="100">

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="135dp"
        android:layout_weight="40"
        android:layout_margin="30dp"
        android:id="@+id/upper"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b1"
            android:onClick="openSingerList"
            android:text="Singer"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b3"
            android:onClick="openFullList"
            android:text="FullList"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            />
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="105dp"
        android:layout_weight="40"
        android:layout_margin="30dp"
        android:id="@+id/downer"
        android:layout_below="@+id/upper"
        >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b4"
        android:onClick="openAlbumList"
        android:text="Album"
         />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b5"
        android:onClick="openFullGender"
        android:text="Gender"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@+id/b4" />

       </RelativeLayout>

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:layout_margin="35dp"
        android:layout_below="@+id/downer"
        android:gravity="center|center_vertical|center_horizontal"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b2"
            android:text="About"
            android:onClick="openSettingList"

            />
    </RelativeLayout>
</RelativeLayout>
